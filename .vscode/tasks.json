{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Docker Compose",
            "type": "shell",
            "command": "docker compose -f docker-compose.yml up --build",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            },
            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": [
                        "-NoExit",
                        "-Command"
                    ]
                },
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ],
    "inputs": []
}