{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: main.py",
      "type": "debugpy",
      "request": "launch",
      "program": "main.py",
      "console": "integratedTerminal"
    },
    {
      "name": "pytest",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
    },
    {
      "name": "build",
      "type": "python",
      "request": "launch",
      "module": "build",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
    },
    {
      "name": "Docker Test Debug",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "0.0.0.0",
      "justMyCode": false,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ]
    },
  ]
}